<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_items.thumb_image.url, class: "bd-placeholder-img card-img-top" unless portfolio_items.thumb_image.url.nil? %>
    <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
    <%= portfolio_items.body%>
    <%= portfolio_items.subtitle%>
    -->
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_items.title, portfolio_show_path(portfolio_items)%></p>
      <div class="d-flex justify-content-between align-items-center">
        <% if logged_in?(:site_admin) %>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_items) %></button>
            <button type="button" class="btn btn-sm btn-outline-secondary">
              <%= link_to 'Delete', portfolio_path(portfolio_items), method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        <% end %>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
