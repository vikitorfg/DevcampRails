<div class="container">
  <div class="row">
    <div class="col-md-7"><%= image_tag @portfolio_items.main_image.url, width: '100%'%></div>
    <div class="col-md-5">
      <h1><%= @portfolio_items.title%></h1>
      <em><%= @portfolio_items.subtitle%></em>
      <p><%= @portfolio_items.body%></p>
      <h1>Technologies</h1>
      <% @portfolio_items.technologies.each do |tech| %>
        <p>
          <%= tech.name %>
        </p>
      <%end%></div>
  </div>
</div>
